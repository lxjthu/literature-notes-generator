{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "declaration": true,        // 生成 .d.ts 声明文件
    "outDir": "dist",          // 添加输出目录
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "types.d.ts"]
}
